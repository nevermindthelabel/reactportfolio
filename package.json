{
  "name": "reactportfolio",
  "version": "1.0.0",
  "description": "my portfolio, built in React.js",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nevermindthelabel/reactportfolio.git"
  },
  "author": "Matt Kilcup",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nevermindthelabel/reactportfolio/issues"
  },
  "homepage": "https://github.com/nevermindthelabel/reactportfolio#readme",
  "dependencies": {
    "dotenv": "^8.1.0",
    "emailjs-com": "^2.4.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "if-env": "^1.0.4",
    "nodemailer": "^6.4.16"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "concurrently": "^4.1.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-wesbos": "0.0.19",
    "eslint-plugin-html": "^5.0.5",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^1.19.1"
  }
}
